{
  "name": "template-ts-vite-lit-tailwind",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "cover": "vitest run --coverage",
    "e2e:verify": "cypress verify",
    "e2e:start:build": "npm run build && concurrently --raw --kill-others --success \"all\" \"npm run preview\" \"cypress open --e2e --config-file cypress.prod.ts\"",
    "e2e:start:dev": "concurrently --raw --kill-others --success \"all\" \"npm run dev\" \"cypress open --e2e\"",
    "e2e:run:build": "npm run build && concurrently --raw --kill-others --success \"all\" \"npm run preview\" \"cypress run --e2e --config-file cypress.prod.ts\"",
    "e2e:run:dev": "concurrently --raw --kill-others --success \"all\" \"npm run dev\" \"cypress run --e2e\"",
    "analyze": "lit-analyzer --strict src/**/*.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier -w --list-different .",
    "lint:staged": "lint-staged",
    "prepare": "husky install && npm run e2e:verify"
  },
  "dependencies": {
    "lit": "^2.5.0"
  },
  "devDependencies": {
    "@types/jsdom": "^20.0.1",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "@vitest/coverage-c8": "^0.25.8",
    "autoprefixer": "^10.4.13",
    "c8": "^7.12.0",
    "concurrently": "^7.6.0",
    "cssnano": "^5.1.14",
    "cypress": "^12.1.0",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-lit": "^1.7.1",
    "eslint-plugin-tailwindcss": "^3.7.1",
    "happy-dom": "^8.1.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "lit-analyzer": "1.2.1",
    "postcss": "^8.4.20",
    "prettier": "2.8.1",
    "tailwindcss": "^3.2.4",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.1",
    "vitest": "^0.25.8"
  }
}
